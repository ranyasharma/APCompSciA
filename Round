import java.util.Scanner;

public class Round //class header "SIGNATURE"
{
    public static void main (String [] args){//main method header "signature"
    Scanner reader = new Scanner(System.in); 
    int rounded; // rounded answer output
    double decimal; // decimal input

    System.out.print(" Enter decimal number;");// ask for value for decimal
        decimal = reader.nextDouble();// grabbing value from keyboard and
                                      // putting in "number variable
        rounded = (int)(decimal + 0.5);// "round" the decimal
        System.out.print("The rounded result is ");// displaying results
        System.out.println(rounded);


}
}
